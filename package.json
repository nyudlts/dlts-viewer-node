{
  "name": "dlts-viewer-node",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prestart": "npm run -s build",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.js --exec \"node --require 'dotenv/config' --require '@babel/register'\"",
    "clean": "rimraf dist",
    "build": "npm run clean && mkdir -p dist && babel src -s -D -d dist",
    "test": "jest --watch",
    "lint": "esw -w src test",
    "build-books-source": "node bin/books.js",
    "build-volumes-source": "node bin/volumes.js",
    "first-run": "npm run-script build-books-source && npm run-script build-volumes-source",
    "clean-cache": "node bin/clean_cache.js && npm run-script first-run"
  },
  "dependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.6.2",
    "@babel/register": "^7.6.2",
    "axios": "^0.19.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "debug": "~2.6.9",
    "dotenv": "^7.0.0",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "lodash.find": "^4.6.0",
    "lodash.isempty": "^4.4.0",
    "lowdb": "^1.0.0",
    "rimraf": "^3.0.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "glob": "^7.1.4",    
    "cli-progress": "^3.3.1",    
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "eslint": "^6.5.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-watch": "^5.0.1",
    "jest": "^24.5.0",
    "nodemon": "^1.19.3",
    "superagent": "^5.1.0",
    "supertest": "^4.0.2"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      "transform-class-properties"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "import",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "jest/no-focused-tests": 2,
      "jest/no-identical-title": 2
    }
  },
  "jest": {
    "verbose": true,
    "testMatch": [
      "**/test/*.js?(x)"
    ],
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "ignore": [
      "resources/*"
    ]
  }
}
